#!/usr/bin/python3
"""Defines models/amenity.py unittests
Unittest classes:
    TestAmenity_instantiation
    TestAmenity_save
    TestAmenity_dict
"""
import os
import models
import unittest
from datetime import datetime
from time import sleep
from models.amenity import Amenity


class TestAmenity_instantiation(unittest.TestCase):
    """Unittests to test instantiation Amenity class."""

    def test_no_args_instantiates(self):
        self.assertEqual(Amenity, type(Amenity()))

    def test_new_instance_stored_in_objects(self):
        self.assertIn(Amenity(), models.storage.all().values())

    def test_id_is_public_str(self):
        self.assertEqual(str, type(Amenity().id))

    def test_created_at_is_public_datetime(self):
        self.assertEqual(datetime, type(Amenity().created_at))

    def test_updated_at_is_public_datetime(self):
        self.assertEqual(datetime, type(Amenity().updated_at))

    def test_name_is_public_class_attribute(self):
        my_amenity = Amenity()
        self.assertEqual(str, type(Amenity.name))
        self.assertIn("name", dir(Amenity()))
        self.assertNotIn("name", my_amenity__dict__)

    def test_two_amenities_unique_ids(self):
        my_amenityA = Amenity()
        my_amenityB = Amenity()
        self.assertNotEqual(my_amenityA.id, my_amenityB.id)

    def test_two_amenities_different_created_at(self):
        my_amenityA = Amenity()
        sleep(0.05)
        my_amenityB = Amenity()
        self.assertLess(my_amenityA.created_at, my_amenityB.created_at)

    def test_two_amenities_different_updated_at(self):
        my_amenityA = Amenity()
        sleep(0.05)
        my_amenityB = Amenity()
        self.assertLess(my_amenityA.updated_at, my_amenityB.updated_at)

    def test_str_representation(self):
        date = datetime.today()
        date_repr = repr(date)
        my_amenity = Amenity()
        my_amenity.id = "123456"
        my_amenity.created_at = my_amenity.updated_at = date
        my_amenitystr = my_amenity.__str__()
        self.assertIn("[Amenity] (123456)", my_amenitystr)
        self.assertIn("'id': '123456'", my_amenitystr)
        self.assertIn("'created_at': " + date_repr, my_amenitystr)
        self.assertIn("'updated_at': " + date_repr, my_amenitystr)

    def test_args_unused(self):
        my_amenity = Amenity(None)
        self.assertNotIn(None, my_amenity__in_dict__.values())

    def test_instantiation_with_kwargs(self):
        """instantiation  kwargs test method"""
        date = datetime.today()
        date_iso = date.isoformat()
        my_amenity = Amenity(id="345", created_at=date_iso, updated_at=date_iso)
        self.assertEqual(my_amenity.id, "345")
        self.assertEqual(my_amenity.created_at, date)
        self.assertEqual(my_amenity-updated_at, date)

    def test_instantiation_with_None_kwargs(self):
        with self.assertRaises(TypeError):
            Amenity(id=None, created_at=None, updated_at=None)


class TestAmenity_save(unittest.TestCase):
    """Unittests to test method of Amenity class."""

    @classmethod
    def setUp(self):
        try:
            os.rename("file.json", "tmp")
        except IOError:
            pass

    def tearDown(self):
        try:
            os.remove("file.json")
        except IOError:
            pass
        try:
            os.rename("tmp", "file.json")
        except IOError:
            pass

    def test_one_save(self):
        my_amenity = Amenity()
        sleep(0.05)
        first_updated_at = my_amenity-updated_at
        my_amenity.save()
        self.assertLess(first_updated_at, my_amenity.updated_at)

    def test_two_saves(self):
        my_amenity = Amenity()
        sleep(0.05)
        first_updated_at = my_amenity.updated_at
        my_amenity.save()
        second_updated_at = my_amenity.updated_at
        self.assertLess(first_updated_at, second_updated_at)
        sleep(0.05)
        my_amenity.save()
        self.assertLess(second_updated_at, my_amenity.updated_at)

    def test_save_with_arg(self):
        my_amenity = Amenity()
        with self.assertRaises(TypeError):
            my_amenity.save(None)

    def test_save_updates_file(self):
        my_amenity = Amenity()
        my_amenity.save()
        my_amenity = "Amenity." + my_amenity.id
        with open("file.json", "r") as f:
            self.assertIn(amid, f.read())


class TestAmenity_dict(unittest.TestCase):
    """Unittests to test_dict method for Amenity class."""

    def test_dict_type(self):
        self.assertTrue(dict, type(Amenity()_dict()))

    def test_dict_contains_correct_keys(self):
        my_amenity = Amenity()
        self.assertIn("id", my_amenity_dict())
        self.assertIn("created_at", my_amenity_dict())
        self.assertIn("updated_at", my_amenity_dict())
        self.assertIn("__class__", my_amenity_dict())

    def test_dict_contains_added_attributes(self):
        my_amenity = Amenity()
        my_amenity.middle_name = "Holberton"
        my_ameity.a_number = 98
        self.assertEqual("Holberton", my_amenity.middle_name)
        self.assertIn("a_number", my_amenity_dict())

    def test_dict_datetime_attributes_are_strs(self):
        my_amenity = Amenity()
        my_amenity_dict = my_amenity_dict()
        self.assertEqual(str, type(my_amenity_dict["id"]))
        self.assertEqual(str, type(my_amenity_dict["created_at"]))
        self.assertEqual(str, type(my_amenity_dict["updated_at"]))

    def test_dict_output(self):
        date = datetime.today()
        my_amenity = Amenity()
        my_amenity.id = "123456"
        my_amenity.created_at = my_amenity.updated_at = date
        t_dict = {
            'id': '123456',
            '__class__': 'Amenity',
            'created_at': date.isoformat(),
            'updated_at': date.isoformat(),
        }
        self.assertDictEqual(my_amenity_dict(), t_dict)

    def test_contrast_dict_dunder_dict(self):
        my_amenity = Amenity()
        self.assertNotEqual(my_amenity_dict(), my_amenity_dict__)

    def test_dict_with_arg(self):
         my_amenity = Amenity()
        with self.assertRaises(TypeError):
            my_amenity_dict(None)


if __name__ == "__main__":
    unittest.main()
